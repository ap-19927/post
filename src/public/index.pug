doctype html
html
  head
    link(href="data:image/x-icon;base64,A" rel="icon" type="image/x-icon")
  body
    form(action="/post" method="post" enctype="multipart/form-data")
      input(type="file" name="img" id="img")
      input(type="text" name="text" placeholder="text" id="text" required)
      button#submitButton(type="submit") Post
    br
    for post in posts
      p #{isoDate(post.date)}
      p #{post.text}
      img(src=post.img)
